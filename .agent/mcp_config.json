{
    "mcpServers": {
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp",
                "--api-key",
                "YOUR_API_KEY"
            ]
        },
        "shadcn": {
            "command": "npx",
            "args": [
                "shadcn@latest",
                "mcp"
            ]
        },
        "supabase-mcp-server": {
            "command": "npx",
            "args": [
                "-y",
                "@supabase/mcp-server"
            ],
            "env": {
                "SUPABASE_PROJECT_ID": "yjgtfrmolpjfcuzrcaum"
            }
        }
    }
}
// setup mcp server in  ~/.gemini\antigravity\mcp_config.json